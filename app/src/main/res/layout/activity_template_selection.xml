<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplateSelectionActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Pilih Template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/template1"
        android:src="@drawable/template1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Template 1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/template2"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/template2"
        android:src="@drawable/template2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Template 2"
        app:layout_constraintTop_toBottomOf="@id/template1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>